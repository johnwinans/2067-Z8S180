TOP=..

LIB_VDP99=$(TOP)/vdp99
LIB_UTILS=$(TOP)/lib

include $(TOP)/Make.rules
#FREQ		= 110	# test for fun

.PHONY: prog

#NEXTPNR_OPT+=--ignore-loops 

include $(LIB_VDP99)/Make.include
include $(LIB_UTILS)/Make.include

TBFILES= \
	memory.v \
	$(LIB_VDP99_FILES) \
	$(LIB_UTILS_FILES) \
	color_palette.v\
	z80_vdp99.v\
	z80_vga99.v\
	z80_ay3891x.v

FILES=\
	top.v \
	$(TBFILES) \
	pll_25_18432.v

all:: top.bin

top.json: $(FILES) rom.hex
	$(COMPILE.v) -p "$(SYNTH) -top top -json $@" $(FILES) $(COMPILE_OPT)

timing: top.asc
	icetime -tmd $(DEVICE) $^

prog: top.bin
	$(FLASH_PROG) $^

# extra dependancies
top.asc: $(PINMAP)

rom.bin:
	cp ../../../2063-Z80-cpm/boot/firmware.bin rom.bin

%.hex: %.bin
	hexdump -v -e '/1 "%02x\n"' < $< > $@

clean::
	rm -f *.lst *.bin *.sym pll_25_18432.v rom.hex z80_vdp99_tb.ram


pll_25_18432.v:
	icepll -i 25 -o 18.432 -m -n pll_25_18432 > $@


z80_vdp99_tb.vvp: z80_vdp99_tb.v $(TBFILES) z80_vdp99_tb.ram
	$(VERILOG_SIM) -s tb -o $@ z80_vdp99_tb.v $(TBFILES)

z80_vdp99: z80_vdp99_tb.vcd
	gtkwave $^

z80_vdp99_tb.ram: z80_vdp99_tb.ram.in
	sed -e 's/#.*$$//' z80_vdp99_tb.ram.in > z80_vdp99_tb.ram
